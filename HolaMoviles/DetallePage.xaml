<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="HolaMoviles.DetallePage"
             Title="{Binding Nombre, StringFormat='Detalles de: {0}'}">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="20">
            
            <StackLayout Orientation="Horizontal">
                <Label Text="Nombre:" />
                <Label Text="{Binding Nombre}" />
            </StackLayout>
            
            <StackLayout Orientation="Horizontal">
                
                <Label Text="Cantidad:" />
                <Label Text="{Binding Cantidad}" />
            </StackLayout>
            
            <StackLayout Orientation="Horizontal">
                
                <Label Text="Precio:" />
                <Label Text="{Binding Precio, StringFormat='$${0}'}" />
            </StackLayout>
            
            <Button Text="Llamar" FontSize="Large" x:Name="botonLlamada" />
            
            <Image Source="{Binding RutaImagen}" VerticalOptions="FillAndExpand" Aspect="Fill" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
